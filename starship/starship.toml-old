format = """
$username\
$hostname\
$directory\
$git_branch\
$git_state\
$git_status\
$cmd_duration\
$line_break\
$character"""

# prompt wide configuration settings
add_newline = true
scan_timeout = 10
# command_timeout = 750

[username]
format = '[$user]($style) '

[hostname]
ssh_symbol = ""
format = "on [$hostname](red) "

[directory]
style = "blue"
truncation_length = 5
truncation_symbol = '.../'
truncate_to_repo = false

[character]
success_symbol = '[‚ûú](bold green) '
error_symbol = '[‚úó](bold red) '

[git_branch]
format = "[$branch ]($style)"
style = "#ffb454"

[git_status]
format = "[[(*$conflicted$untracked$modified$staged$renamed$deleted)](218) ($ahead_behind$stashed)]($style)"
style = "cyan"
conflicted = "="
untracked = "‚á°"
modified = "‚á£"
staged = "+"
renamed = "¬ª"
deleted = "‚úò"
stashed = "‚â°"

[git_state]
format = '\([$state( $progress_current/$progress_total)]($style)\) '
style = "#d2a6ff"

[cmd_duration]
format = "[$duration]($style) "
style = "yellow"

