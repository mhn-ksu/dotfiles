// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "autosave": "on_focus_change",
  // "buffer_font_family": "JetBrainsMonoNL",
  "buffer_font_family": "Intel One Mono",
  "buffer_font_size": 16,
  "buffer_line_height": "comfortable",
  "cursor_blink": false,
  "enable_language_server": true,
  "features": {
    "copilot": false
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "format_on_save": "on",
  "formatter": "language_server",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },
  "git_diff": true,
  "git_status": true,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "languages": {
    "Plain Text": {
      "soft_wrap": "preferred_line_length"
    },
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Make": {
      "hard_tabs": true
    },
    "Markdown": {
      "tab_size": 2,
      "soft_wrap": "preferred_line_length"
    },
    "JavaScript": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2
    },
    "YAML": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "assist": {
          "importGranularity": "module",
          "importPrefix": "bu_self",
          "group": "crate"
        },
        "checkOnSave": {
          "command": "clippy" // rust-analyzer.checkOnSave.command
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "typescript-language-server": {
    "initialization_options": {
      "preferences": {
        "includeInlayParameterNameHints": "all",
        "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
        "includeInlayFunctionParameterTypeHints": true,
        "includeInlayVariableTypeHints": true,
        "includeInlayVariableTypeHintsWhenTypeMatchesName": false,
        "includeInlayPropertyDeclarationTypeHints": true,
        "includeInlayFunctionLikeReturnTypeHints": true,
        "includeInlayEnumMemberValueHints": true
      }
    }
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "project_panel": {
    "dock": "left",
    "git_status": true,
    "default_width": 420
  },
  "relative_line_numbers": true,
  "remove_trailing_whitespace_on_save": true,
  "tabs": {
    "git_status": true
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "bottom",
    // width when docked to the 'left' or 'right'
    "default_width": 640,
    // height when docked to the 'bottom'
    "default_height": 320,
    // "font_family": "JetBrainsMonoNL",
    "font_family": "Hack Nerd Font Mono",
    "font_size": 13,
    "line_height": "comfortable"
  },
  "toolbar": {
    "title": true
  },
  "blinking": "off",
  "working_directory": "current_project_directory",
  "theme": "Ayu Dark",
  "vertical_scroll_margin": 5,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": false,
    "use_smartcase_find": true
  },
  "vim_mode": true
}
