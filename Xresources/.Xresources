! URxvt settings
! URxvt.termName:          xterm-256color
URxvt.termName:          screen-256color

URxvt*scrollBar:         false
URxvt*scrollBar_right:   false

! URxvt*transparent:       false
URxvt*transparent:       true
URxvt*shading:           10

! Works with compton for true transparency
!URxvt*depth: 32
!URxvt.background: [5]#2b303b

! URxvt.font: xft:Sans Seri:pixelsize=16
URxvt.font: xft:Hack:pixelsize=13

! Urxvt*font:              xtf:Anonymous:size=18
! URxvt.letterSpace: 0

*antialias:  true
*autohint:   false

! URxvt.perl-ext-common: default,matcher,fullscreen,resize-font,clipboard,tabbed,selection-to-clipboard
URxvt.perl-ext-common: default,matcher,clipboard,selection-to-clipboard

URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! URxvt.perl-ext-common: ...,tabbed,...
! URxvt.tabbed.tabbar-fg: 2
! URxvt.tabbed.tabbar-bg: 0
! URxvt.tabbed.tab-fg: 3
! URxvt.tabbed.tab-bg: 2

! fullscreen toggle
URxvt.keysym.F11: perl:fullscreen:switch

! clipboard
! URxvt.perl-ext-common: selection-to-clipboard
