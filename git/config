# squash = "!git rebase -v- i $(git mainbranch)"
# publish = push origin HEAD --force-with-lease
# pub = publish

# [commit]
# 	gpgsign = true

[gpg]
	format = ssh

[color]
  ui = auto
  interactive = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = magenta
  untracked = bold yellow

[core]
  editor = nvim
  autocrlf = input
  safecrlf = warn
  excludesfile = ~/.gitignore_global
  quotepath = false
	pager = less -R
  filemode = true

[diff]
  # tool = vimdiff
  tool = nvimdiff

[merge]
  # Include summaries of merged commits in newly created merge commit
  # messages
  log = true
  tool = vimdiff
  # No fast-forward merges - collapse branch history
  ff = false

[pull]
  # Allow fast-forward on pulls
  ff = true

[push]
  # simple is the new default, requires > 1.7
  # default = simple
  default = matching


[http]
  cookiefile = ~/.gitcookies

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
